{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block menu_active %}active{% endblock %}
{% block menu_logout %}out-alt{% endblock %}

{% block body %}

    <div class ="title">
        <h2>{{ user.email }}</h2>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

<div class="container">
    <div class="card card-btn button-index">
        <a href="{{ path('back_user_index') }}">back to list</a>
    </div>
</div>

    <div class="container-read">
        <button class="card-btn button-validate button-edit"><a href="{{ path('back_user_edit', {'id': user.id}) }}">Edit</a></button>

        {{ include('user/_delete_form.html.twig') }}
    </div>


{% endblock %}
